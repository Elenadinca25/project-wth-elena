

<%= form_for(@pet) do |f| %>

    <%= f.label :name%>
    <%= f.text_field :name %><br>

    <%= f.label :gender%>
    <%= f.text_field :gender %><br>

    <%= f.label :age%>
    <%= f.number_field :age %><br>

    <%= f.label :owner%>
    <%= f.text_field :owner %><br>

    <%= f.submit %>

<% end %>